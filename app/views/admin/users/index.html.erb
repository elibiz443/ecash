<div id="content" class="py-4">
  <div class="container">
    <div class="row">         

      <div class="col-lg-12"> 

        <!-- Users =============================== -->
        <div class="bg-white shadow-sm rounded py-4 mb-4">
          <h3 class="text-5 font-weight-400 d-flex align-items-center px-4 mb-4">Registered Users</h3>

          <% if flash[:success] %>
            <div class='alert alert-success'><%= flash[:success] %></div>
          <% end %>
          
          <% if flash[:error] %>
            <div class='alert alert-danger'><%= flash[:error] %></div>
          <% end %>

          <!-- Title ======================== -->
          <div style="padding-left: 20px;">
            <a href="/admin/#userid"><i class="fa fa-arrow-left"></i> Go Back</a>
          </div>
          <div class="font-weight-00" style="text-align: right;padding-right:25px;">
            <a href="/admin/users/new"><i class="fas fa-plus" style="padding-bottom: 20px;"> Add New User</i></a>
          </div>

          <!-- Title ======================== -->
          <div class="transaction-title py-2 px-4">
            <div class="row font-weight-00">
              <div style="border-right: 2px solid #a1a3fe;padding-right: 10px;">ID</div>
              <div class="col col-sm-1 text-center" style="border-right: 2px solid #a1a3fe;padding-right: 40px;">Name</div>
              <div class="col col-sm-4 text-center" style="border-right: 2px solid #a1a3fe;">Number</div>
              <div class="col col-sm-3 text-center d-none d-md-block d-lg-block d-xl-block" style="border-right: 2px solid #a1a3fe;">Email</div>
              <div class="col col-sm-2 text-right" style="border-right: 2px solid #a1a3fe;">Edit</div>
              <div class="col col-sm-1 text-center">Delete</div>
            </div>
          </div>
          <!-- Title End --> 
          
          <!-- Info List ===================== -->
          <div class="transaction-list">
            <div class="px-4 py-3">
              <% @admin_user.each do |admin_user| %>
                <div class="row align-items-center flex-row" style="border-bottom: 2px dotted #a1a3fe;padding-bottom: 10px;padding-top: 10px;">

                  <div> 
                    <span class="d-block text-4"><%= admin_user.id %>.</span> 
                  </div>

                  <div class="col col-sm-1 text-center"> 
                    <span class="d-block text-4 font-weight-300">
                      <%= admin_user.first_name %>
                    </span>
                    <span class="d-block text-1 font-weight-300 text-uppercase">
                      <%= admin_user.last_name %>
                    </span> 
                  </div>

                  <div class="col col-sm-4 text-center"> 
                    <span class="d-block text-4"><%= admin_user.phone_no %></span> 
                    <span class="text-muted">Ksh <%= admin_user.balance %></span> 
                  </div>

                  <div class="col col-sm-3 text-center d-none d-md-block d-lg-block d-xl-block"> 
                    <span class="d-block text-4"><%= admin_user.email %></span> 
                    <span class="text-muted">Admin? <%= admin_user.admin %></span> 
                  </div>
                  
                  <div class="col col-sm-2 text-right text-4"> 
                    <span class="text-nowrap">
                      <%= link_to '', edit_admin_user_path(admin_user), :class => "fas fa-edit" %>
                    </span> 
                  </div>

                  <div class="col col-sm-1 text-center text-4"> 
                    <span class="text-nowrap">
                      <%= link_to '', admin_user_path(admin_user), :class => "fas fa-trash", method: :delete, data: {confirm: 'Are you sure?'} %>
                    </span> 
                  </div>

                </div>
              <% end %>
            </div>
          </div>
          <!-- Info List End --> 
        </div>
        <!-- Users End -->

        <i><%= pagy_bootstrap_nav(@pagy).html_safe %></i>

      </div>
    </div>
  </div>
</div>