<p id="notice"><%= notice %></p>

<h1>Edit Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone no</th>
      <th>Email</th>
      <th>Balance</th>
      <th>Password digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.email %></td>
        <td><%= user.balance %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Show','/admin/editusers/edituser' %></td>
        <td><%= link_to 'Edit', '/admin/editusers/:id/edit' %></td>
        <td><%= link_to 'Destroy', '/admin/editusers/edit', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

