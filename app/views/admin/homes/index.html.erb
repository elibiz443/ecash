<div id="content" class="py-4">
  <div class="container">
    <div class="row"> 

      <div class="col-lg-12"> 

        <!-- Home =============================== -->
        <div class="bg-white shadow-sm rounded py-4 mb-4">
          <h3 class="text-5 font-weight-400 d-flex align-items-center px-4 mb-4">
            Home Details
          </h3>

          <% if flash[:success] %>
            <div class='alert alert-success'><%= flash[:success] %></div>
          <% end %>

          <!-- Title ======================== -->
          <div style="padding-left: 20px;">
            <a href="/admin/#homeid"><i class="fa fa-arrow-left"></i> Go Back</a>
          </div>
          <div class="font-weight-00" style="text-align: right;padding-right:25px;">
            <a href="/admin/homes/new"><i class="fas fa-plus"> Add New Detail</i></a>
          </div>

          <div class="transaction-title py-2 px-4">
            <div class="row font-weight-00">
              <div class="col col-sm-7">&nbsp;&nbsp;&nbsp;Detail</div>
              <div class="col-3 col-sm-2 text-right">Edit</div>
              <div class="col-3 col-sm-2 text-right">Delete</div>
            </div>
          </div>
          <!-- Title End --> 
          
          <!-- Info List
          =============================== -->
          <div class="transaction-list">
            <div class="px-4 py-3">
              <% @homes.each do |home| %>
                <div class="row align-items-center flex-row" style="border-bottom: 2px dotted #a1a3fe;padding-bottom: 10px;padding-top: 10px;">

                  <span class="d-block text-4 font-weight-300">
                    <%= home.id %>.
                  </span>

                  <div class="col col-sm-7"> 
                    <span class="d-block text-4"><%= home.detail %></span> 
                  </div>
                  
                  <div class="col-3 col-sm-2 text-right text-4"> 
                    <span class="text-nowrap">
                      <%= link_to '', edit_admin_home_path(home), :class => "fas fa-edit" %>
                    </span> 
                  </div>

                  <div class="col-3 col-sm-2 text-right text-4"> 
                    <span class="text-nowrap">
                      <%= link_to '', admin_home_path(home), :class => "fas fa-trash", method: :delete, data: {confirm: 'Are you sure?'} %>
                    </span> 
                  </div>

                </div>
              <% end %>
            </div>
          </div>
          <!-- Info List End --> 
        </div>
        <!-- Home End -->
        <i><%= pagy_bootstrap_nav(@pagy).html_safe %></i>

      </div>

    </div>
  </div>
</div>
