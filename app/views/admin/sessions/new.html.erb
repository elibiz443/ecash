<section class="section-margin--small">
  <div class="container" style="background-color: #dfe1fc;padding: 30px;">
    <div class="row">

      <div class="col-md-4 col-lg-3 mb-4 mb-md-0">
        <p>Login if you are already an Admin</p>

        <p >
          If not, request to be admin: <%= link_to 'Click here', new_admin_user_path %>
        </p>
      </div>

      <div class="col-md-6 col-lg-5">

        <% if flash[:error] %>
        <div class='alert alert-danger'><%= flash[:error] %></div>
        <% end %>

        <% if flash[:success] %>
          <div class='alert alert-success'><%= flash[:success] %></div>
        <% end %>

        <%= form_for :admin_session, url: admin_sessions_path do |f| %>
          <div class='form-group'>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
          <div class='form-group'>
            <%= f.submit 'Log In', class: 'btn btn-primary' %>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</section>
